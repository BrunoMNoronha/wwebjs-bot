{
  "name": "wwebjs-bot",
  "version": "1.0.0",
  "description": "bot para WhatsApp construído com whatsapp-web.js, conversas baseadas em fluxos (flows)",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prestart": "npm run build",
    "start": "node dist/main.js",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write .",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll",
    "test:answers": "jest --runInBand -t \"(answers|opções|options)\"",
    "validate:answers": "npm run test:answers",
    "test:flows": "jest --runInBand -t \"(flow|fluxo|flows|opções)\"",
    "validate:flows": "npm run test:flows",
    "test:ci": "jest --runInBand --coverage",
    "validate": "npm run lint && npm run validate:answers && npm run validate:flows"
  },
  "keywords": [],
  "author": "Bruno M Noronha",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}

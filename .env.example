# Diretório de sessão do whatsapp-web.js (LocalAuth)
WWEBJS_AUTH_DIR=.wwebjs_auth

# Controle de encerramento ao usar !shutdown ("1" para forçar exit)
# Se vazio, fora de testes encerra; em testes não encerra
EXIT_ON_SHUTDOWN=

# Configuração de fluxos
MENU_FLOW=1

# Configuração de administração
OWNER_ID=
ALLOW_SELF_ADMIN=0

# Limites de uso (rate limiting)
RATE_PER_CHAT_COOLDOWN_MS=1500
THROTTLE_GLOBAL_MAX=10
THROTTLE_GLOBAL_INTERVAL_MS=1000

# Configuração de timeout de fluxos (já suportados)
FLOW_PROMPT_WINDOW_MS=120000
FLOW_TTL_SECONDS=1800

# Redis (opcional, para persistência de estado)
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
FLOW_REDIS_PREFIX=wwebjs:flow:

# Ambiente
NODE_ENV=development

# Puppeteer/Chrome
CHROME_PATH= # Caminho personalizado para o executável do Chrome/Chromium
PUPPETEER_SINGLE_PROCESS=0 # Defina como 1 para executar o Puppeteer em single-process

# Reautenticação / limpeza da pasta de sessão (Windows pode travar arquivos)
# Tentativas e backoff exponencial para remover a pasta de sessão ao deslogar
AUTH_RM_RETRIES=10
AUTH_RM_BASE_DELAY_MS=200
AUTH_RM_MAX_DELAY_MS=2000

# Reconexão automática (backoff exponencial)
RECONNECT_BASE_BACKOFF_MS=1000
RECONNECT_MAX_BACKOFF_MS=30000
RECONNECT_BACKOFF_FACTOR=2

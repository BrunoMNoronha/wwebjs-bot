{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "__tests__/**/*.ts", "main.ts"],
  "exclude": ["node_modules", "dist"]
}
